<main>
    <div id="main-div">
        <div id="register-form-div">
            <img src="./assets/swiftseats-logo.png" alt="swiftseats-logo" width="140px" height="79px">
            <h2>Create Account</h2>
            <form action="/register/new" method="post" enctype="multipart/form-data">
                <input type="text" name="username" id="username" placeholder="Full Name" required><br>
                <input type="email" name="email" id="email" placeholder="Email" required><br>
                <input type="password" name="password" id="password" placeholder="Password" required><br>
                <div id="select-account-type-div">
                    <p id="select-account-label">Select Account Type:</p>
                    <input type="radio" name="account-type" class="account-type" value="Student">
                    <label for="account-type">Student</label>
                    <input type="radio" name="account-type" class="account-type" value="Lab Technician">
                    <label for="account-type">Lab Technician</label>
                </div>
                <p id="upload-pfp-label">Select Profile Picture:</p>
                <input type="file" name="upload-pfp" id="upload-pfp" accept="image/*">
                <input type="submit" value="Create" class="submit">
            </form><br>
        </div>
        <div id="register-bg-div">
            <img id="register-bg" src="./assets/register-bg.jpg" alt="register-bg" width="1025px" height="840px">
            <span id="overlay">    
                <h1>Welcome!</h1>
                <h2>Looking for a seat?</h2>
            </span>
        </div>
    </div> 
</main>