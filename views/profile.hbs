<main>
    <section id="user-actions-container">
        <div id="user-pfp-div"> <img src="{{profileUser.pfp}}" alt="user-pfp"> </div>
        <div id="user-name-div"> <h1>{{profileUser.name}}</h1> </div>
        <div id="user-email-div"> <h3>{{profileUser.email}}</h3> </div>
        <div id="user-account-type-div"> <h3>{{profileUser.accType}}</h3> </div>
        <div id="user-bio-div"> <p>{{profileUser.bio}}</p> </div>
    </section>

    <section id="profiles-banner">
        <h2>View Other Profiles</h2>
    </section>

    <section id="user-carousel">
        <div id="user-carousel-div">
            {{#each userData}}
                <div class="card" data-user-id="{{userID}}" onclick="openProfile(event)">
                    <img class="pfp" src="{{pfp}}" alt="Profile Picture">
                    <p class="name">{{name}}</p>
                </div>
            {{/each}}
        </div>
    </section> 
</main>

<script>
    function openProfile(event) {
        const userID = event.currentTarget.getAttribute('data-user-id');
        window.location.href = '/profile/' + userID;
    }
</script>